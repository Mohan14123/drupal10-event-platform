# Drupal Event Registration Platform - Environment Configuration
# Copy this file to .env.local and configure your values
# NEVER commit .env.local to version control

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================

# Database host (use container name for Docker)
DB_HOST=postgres

# Database name
DB_NAME=drupal

# Database user
DB_USER=drupal

# Database password (CHANGE THIS IN PRODUCTION)
DB_PASSWORD=drupal_password

# =============================================================================
# DRUPAL CONFIGURATION
# =============================================================================

# Base URL for the Drupal site
DRUPAL_BASE_URL=http://localhost:8080

# Admin email address for notifications
ADMIN_EMAIL=admin@example.com

# =============================================================================
# PHP CONFIGURATION (optional overrides)
# =============================================================================

# PHP memory limit
# PHP_MEMORY_LIMIT=256M

# Upload max size
# PHP_UPLOAD_MAX_SIZE=64M

# =============================================================================
# DEVELOPMENT SETTINGS (disable in production)
# =============================================================================

# Enable verbose error display (set to 0 in production)
# PHP_DISPLAY_ERRORS=1
